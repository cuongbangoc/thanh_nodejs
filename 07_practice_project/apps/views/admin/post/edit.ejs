<!DOCTYPE html>
<html>
<head>
	<title>Edit Post</title>
	<%- include ../layout/head%>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>
</head>
<body>
	<%- include ../layout/nav%>

	<div class="panel panel-default">
            <div class="panel-heading">
                Edit Post
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <% if (data && data.error) {%>
                            <div id="login-alert" class="alert alert-danger col-sm-12">
                                <%= data.error%>
                            </div>
                        <% } %>
                        <form role="form" method="" action="">
                            <input type="hidden" name="id" class="id_cl" value="<% if (data && data.post) { %><%= data.post.id %><%}%>">
                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control title_cl" name="title" placeholder="Title" value="<% if (data && data.post) { %><%= data.post.title %><%}%>">
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <textarea class="form-control  content_cl" id='content_cl' name="content" placeholder="Content" >
                                    <% if (data && data.post) { %><%= data.post.content %><%}%>
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label>Author</label>
                                <input class="form-control author_cl" name="author" placeholder="Author" value="<% if (data && data.post) {%><%= data.post.author%><%}%>">
                            </div>
                            <input type="button" name="" value="add" class="btn-btn-success btn-update">
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <script src="/static/js/post.js"></script>
</body>
</html>